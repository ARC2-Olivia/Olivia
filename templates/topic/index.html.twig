{% extends 'base.html.twig' %}
{% trans_default_domain 'app' %}

{% block title %}{{ 'page.topic.index'|trans }}{% endblock %}

{% block body %}
    <div class="index-banner" style="background-image: url('{{ asset('build/images/bg-module-theory.png') }}'); background-position: center 60%">
        <div class="index-banner-wrapper">
            <div class="index-banner-title">{{ 'app.brand.short'|trans }}</div>
            <div class="index-banner-subtitle">{{ 'topic.title.index'|trans }}</div>
        </div>
    </div>

    <div class="container py-5">
        {% include "_partials/toasts.html.twig" with {'classAddition': 'row'} %}
        <div class="row pb-5">
            <div class="topic-about-title">{{ 'topic.about.title'|trans }}</div>
            <div class="topic-about-text">{{ 'topic.about.text'|trans }}</div>
        </div>
        <div class="row g-3">
            {% for topic in topics %}
                {% include 'topic/_index_topic.html.twig' with {'topic': topic} %}
            {% endfor %}
            {% if is_granted('ROLE_MODERATOR') %}{% include 'topic/_index_add.html.twig' %}{% endif %}
        </div>
    </div>
{% endblock %}