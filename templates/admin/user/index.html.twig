{% extends 'admin/_base_admin.html.twig' %}
{% trans_default_domain 'app' %}

{% block adminContent %}
    <div class="container-fluid p-5">
        <div class="card">
            <div class="card-title d-flex justify-content-between align-items-center">
                <span>{{ 'user.title.index'|trans }}</span>
                <a href="#" class="btn btn-theme-white bg-blue font-size-default">{{ 'common.new'|trans }}</a>
            </div>
            <div class="card-text">
                <table class="table table-cols-5">
                    <thead>
                        <tr>
                            <th>{{ 'common.id'|trans }}</th>
                            <th>{{ 'form.entity.user.label.email'|trans }}</th>
                            <th>{{ 'form.entity.user.label.roles'|trans }}</th>
                            <th>{{ 'form.entity.user.label.activated'|trans }}</th>
                            <th>{{ 'common.actions'|trans }}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.id }}</td>
                                <td>{{ user.email }}</td>
                                <td>{{ user.roles|join(', ') }}</td>
                                <td>{{ user.activated ? 'common.yes'|trans : 'common.no'|trans }}</td>
                                <td>
                                    <a href="#" class="btn btn-theme-white btn-sm bg-blue">{{ 'common.edit'|trans }}</a>
                                    <form class="d-inline-block">
                                        <button type="button" class="btn btn-theme-white btn-sm bg-red">{{ 'common.delete'|trans }}</button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}