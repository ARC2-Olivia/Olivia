{% trans_default_domain 'app' %}

<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}{{ 'app.name'|trans }}{% endblock %}</title>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:ital,wght@0,400;0,600;0,700;1,400;1,600;1,700&display=swap" rel="stylesheet">

        {{ encore_entry_link_tags('app') }}
        {{ encore_entry_link_tags('popper.dropdown') }}
        {% block stylesheets %}{% endblock %}
        <style>
            footer a {
                text-decoration: none;
                color: inherit;
            }

            footer .footer-1 {
                background-color: #00455f;
                color: #ffffff;
                padding-top: 24px;
                padding-bottom: 24px;
            }

            footer .footer-2 {
                background-color: #ffffff;
                padding-top: 24px;
                padding-bottom: 24px;
            }

            footer .footer-column {
                display: flex;
                flex-direction: column;
                align-items: center;
                row-gap: 4px;
            }

            footer .footer-cofinancing {
                width: 25%;
            }

            footer .footer-logos {
                width: 75%;
            }

            @media screen and (max-width: 768px) {
                footer .footer-cofinancing {
                    width: 50%;
                }

                footer .footer-logos {
                    width: 90%;
                }
            }
        </style>

        {{ encore_entry_script_tags('app') }}
        {{ encore_entry_script_tags('popper.dropdown') }}
        {% block javascripts %}{% endblock %}
    </head>
    <body>
        <header>
            {% include 'nav.html.twig' %}
            {% block header %}{% endblock %}
        </header>
        <div class="body">
            {% block body %}{% endblock %}
        </div>
        <footer>{% block footer %}{% include 'footer.html.twig' %}{% endblock %}</footer>
        {% if is_granted('IS_IMPERSONATOR') %}
            {% include '_partials/exit_immitation.html.twig' %}
        {% endif %}
    </body>
</html>
