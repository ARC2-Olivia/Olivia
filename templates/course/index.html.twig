{% extends 'base.html.twig' %}
{% trans_default_domain 'app' %}

{% block title %}{{ 'page.course.index'|trans }}{% endblock %}

{% block header %}
    <div class="container-fluid py-3 px-5">
        <div class="row align-items-center">
            <div class="col-12 col-sm-6">
                <span class="brand">OLIVIA</span>
            </div>
            <nav class="col-12 col-sm-6 text-end">
                <ul class="navigation-main p-0">
                    {% if is_granted('ROLE_ADMIN') %}
                        <li><a href="{{ path('admin_index') }}" class="btn btn-theme-white">{{ 'nav.admin'|trans }}</a></li>
                    {% endif %}
                    {% if is_granted('ROLE_USER') %}
                        <li><a href="{{ path('security_logout') }}" class="btn btn-theme-white">{{ 'common.logout'|trans }}</a></li>
                    {% else %}
                        <li><a href="{{ path('security_login') }}" class="btn btn-theme-white">{{ 'common.login'|trans }}</a></li>
                    {% endif %}
                </ul>
            </nav>
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="container pt-5">
        <div class="row mb-5">
            <h1 class="text-center">{{ 'course.title.index'|trans }}</h1>
        </div>
        {% include "_partials/toasts.html.twig" with {'classAddition': 'row'} %}
        <div class="row g-3">
            {% for course in courses %}
                {% include 'course/_index_course.html.twig' with {'course': course} %}
            {% endfor %}
            {% if is_granted('ROLE_MODERATOR') %}{% include 'course/_index_add.html.twig' %}{% endif %}
        </div>
    </div>
{% endblock %}