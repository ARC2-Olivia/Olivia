{% extends 'course/_base_course.html.twig' %}
{% trans_default_domain 'app' %}

{% block courseContent %}
    <div class="p-0">
        {% include 'course/_form.html.twig' %}
        <div class="d-flex justify-content-between mt-3">
            <form action="{{ path('course_delete', {'course': course.id}) }}"
                  onsubmit="return confirm('{{ 'course.delete'|trans({'%course%': course.name}) }}')"
                  method="post"
            >
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('course.delete') }}"/>
                <button type="submit" class="btn btn-theme-white bg-red">{{ 'common.delete'|trans }}</button>
            </form>
            <button type="submit" form="course" class="btn btn-theme-white bg-blue">{{ 'common.save'|trans }}</button>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('df-select') }}
    {{ encore_entry_link_tags('quill') }}
    <style>
        .editor-container {
            height: 440px;
            padding-bottom: 42px;
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('df-select') }}
    {{ encore_entry_script_tags('quill') }}
    <script>
        const settings = { theme: "snow", modules: { toolbar: "#editor-toolbar" } };
        const translation = { textCancel: '{{ 'common.cancel'|trans }}', textSubmit: '{{ 'common.submit'|trans }}' };

        window.onload = () => {
            const quill = new Quill("#editor", settings);
            quill.root.innerHTML = `{{ course.learningOutcomes|raw }}`;
            QuillUtils.assignHtmlEditingCapabilities(quill, document.getElementById("editor-html"), translation)

            const form = document.querySelector("form#course");
            form.onsubmit = function(e) {
                const content = this.querySelector("#course_learningOutcomes");
                content.value = quill.root.innerHTML;
            };
        };
    </script>
{% endblock %}