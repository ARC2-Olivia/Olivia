{% trans_default_domain 'app' %}
{% if isLast is not defined %}
    {% set isLast = false %}
{% endif %}
<div class="row{% if not isLast %} mb-4{% endif %}">
    <div class="course-instructor">
        <div class="course-instructor-image">
            <img src="{{ instructor.image is not null ? path('file_fetch_instructor_image', {'instructor': instructor.id}) : asset('build/images/avatar-empty.svg') }}" alt="Instructor image"/>
        </div>
        <div class="course-instructor-name-and-institution">
            <span>{{ instructor }}</span>
            <span>{{ instructor.institution }}</span>
        </div>
        {% if is_granted('ROLE_MODERATOR') %}
            <form action="{{ path('course_instructor_remove', {'course': course.id, 'instructor': instructor.id}) }}"
                  onsubmit="return confirm('{{ 'instructor.remove'|trans({'%instructor%': instructor}) }}')"
                  method="post"
            >
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('course.instructor.remove') }}"/>
                <button type="submit" class="btn btn-theme-white btn-sm bg-red">{{ 'common.remove'|trans }}</button>
            </form>
        {% endif %}
    </div>
</div>