{% trans_default_domain 'app' %}

<div class="col-12 col-lg-3 course-details">
    <h3>{{ 'common.details'|trans }}:</h3>
    <div class="course-details-item">
        {{ mdi('translate-variant', 'course-details-item-icon') }}
        <div class="course-details-item-info">
            <b>{{ 'course.details.label.language'|trans }}:</b>
            <span>{{ 'course.details.value.language'|trans }}</span>
        </div>
    </div>
    <div class="course-details-item">
        {{ mdi('timer-outline', 'course-details-item-icon') }}
        <div class="course-details-item-info">
            <b>{{ 'course.details.label.expectedWorkload'|trans }}:</b>
            <span>{{ course|translate_workload }}</span>
        </div>
    </div>
    <div class="course-details-item">
        {{ mdi('cog', 'course-details-item-icon') }}
        <div class="course-details-item-info">
            <b>{{ 'course.details.label.type'|trans }}:</b>
            <span>{{ 'course.details.value.type'|trans }}</span>
        </div>
    </div>
    <div class="course-details-item">
        {{ mdi('decagram', 'course-details-item-icon') }}
        <div class="course-details-item-info">
            <b>{{ 'course.details.label.certification'|trans }}:</b>
            <span>{{ 'course.details.value.certification'|trans }}</span>
        </div>
    </div>
    <div class="course-details-item">
        {{ mdi('lock-open', 'course-details-item-icon') }}
        <div class="course-details-item-info">
            <b>{{ 'course.details.label.enrollment'|trans }}:</b>
            <span>{{ 'course.details.value.enrollment'|trans }}</span>
        </div>
    </div>
</div>