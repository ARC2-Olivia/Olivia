{% extends 'termsOfService/_base_tos.html.twig' %}
{% trans_default_domain 'app' %}

{% block title %}{{ 'page.termsOfService.index'|trans }}{% endblock %}

{% block tosContent %}
    <div class="card card-body">
        <div class="d-flex justify-content-between align-items-center flex-wrap">
            <h1 class="card-title">{{ 'termsOfService.title.index'|trans }}</h1>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('tos_new') }}" class="btn btn-theme-white bg-blue btn-sm">{{ mdi('plus') }}</a>
            {% endif %}
        </div>
        <apex-grid class="apex-style-override" data-column-defs="{{ columnDefs|json_encode }}" data-url="{{ path('tos_ajax_index') }}" style="height: 400px"></apex-grid>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('apexgrid') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('apexgrid') }}
{% endblock %}