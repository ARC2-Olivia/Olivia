{% extends 'termsOfService/_base_tos.html.twig' %}
{% trans_default_domain 'app' %}

{% block title %}{{ 'page.termsOfService.show'|trans }}{% endblock %}

{% block tosContent %}
    <div class="card card-body">
        <div class="text-center">
            <h1>{{ 'termsOfService.format'|trans({'%version%': gdpr.version, '%revision%': gdpr.revision}) }}</h1>
            <p>{{ gdpr.startedAt|date('d.m.Y.') }} &mdash; {{ gdpr.endedAt is not null ? gdpr.endedAt|date('d.m.Y.') : 'termsOfService.ongoing'|trans }}</p>
            {% if is_granted('ROLE_ADMIN') and gdpr.active %}
                <div class="mt-3">
                    <a href="{{ path('gdpr_edit', {'gdpr': gdpr.id}) }}" class="btn btn-theme-white bg-blue">{{ 'common.edit'|trans }}</a>
                    <a href="{{ path('gdpr_revise', {'gdpr': gdpr.id}) }}" class="btn btn-theme-white bg-green me-1">{{ 'termsOfService.extra.revise'|trans }}</a>
                </div>
            {% endif %}
            {% if is_user() %}
                {% if gdpr_accepted(gdpr) %}
                    <form class="mt-3 d-inline-block" method="post" action="{{ path('gdpr_rescind', {'gdpr': gdpr.id}) }}" onsubmit="return confirm('{{ 'termsOfService.message.rescind'|trans }}')">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('tos.rescind') }}"/>
                        <button type="submit" class="btn btn-theme-white bg-red">{{ 'termsOfService.extra.rescind'|trans }}</button>
                    </form>
                {% else %}
                    <form class="mt-3 d-inline-block" method="post" action="{{ path('gdpr_accept', {'gdpr': gdpr.id}) }}" onsubmit="return confirm('{{ 'termsOfService.message.accept'|trans }}')">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('tos.accept') }}"/>
                        <button type="submit" class="btn btn-theme-white bg-blue">{{ 'termsOfService.extra.accept'|trans }}</button>
                    </form>
                {% endif %}
                <a href="{{ path('gdpr_data_protection') }}" class="btn btn-theme-white bg-blue">{{ 'nav.gdpr'|trans }}</a>
            {% endif %}
        </div>
        <div class="d-flex justify-content-center align-items-center my-3">
            <button class="btn btn-nav active" data-tab-trigger="#content-tos">{{ 'form.entity.termsOfService.label.termsOfService'|trans }}</button>
            <button class="btn btn-nav" data-tab-trigger="#content-pp">{{ 'form.entity.termsOfService.label.privacyPolicy'|trans }}</button>
        </div>
        <div id="content-tos" class="ql-editor" data-tab>{{ gdpr.termsOfService|raw }}</div>
        <div id="content-pp" class="ql-editor hide" data-tab>{{ gdpr.privacyPolicy|raw }}</div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('tabs.simple') }}
{% endblock %}