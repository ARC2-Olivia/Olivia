{% extends 'termsOfService/_base_tos.html.twig' %}
{% trans_default_domain 'app' %}

{% block title %}{{ 'page.termsOfService.show'|trans }}{% endblock %}

{% block tosContent %}
    <div class="card card-body">
        <div class="text-center">
            <h1>{{ 'termsOfService.format'|trans({'%version%': termsOfService.version, '%revision%': termsOfService.revision}) }}</h1>
            <p>{{ termsOfService.startedAt|date('d.m.Y.') }} &mdash; {{ termsOfService.endedAt is not null ? termsOfService.endedAt|date('d.m.Y.') : 'termsOfService.ongoing'|trans }}</p>
            {% if is_granted('ROLE_ADMIN') and termsOfService.active %}
                <div class="mt-3">
                    <a href="{{ path('tos_edit', {'termsOfService': termsOfService.id}) }}" class="btn btn-theme-white bg-blue">{{ 'common.edit'|trans }}</a>
                    <a href="{{ path('tos_revise', {'termsOfService': termsOfService.id}) }}" class="btn btn-theme-white bg-green me-1">{{ 'termsOfService.extra.revise'|trans }}</a>
                </div>
            {% endif %}
            {% if is_user() %}
                {% if terms_of_service_accepted(termsOfService) %}
                    <form class="mt-3" method="post" action="{{ path('tos_rescind', {'termsOfService': termsOfService.id}) }}" onsubmit="return confirm('{{ 'termsOfService.message.rescind'|trans }}')">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('tos.rescind') }}"/>
                        <button type="submit" class="btn btn-theme-white bg-red">{{ 'termsOfService.extra.rescind'|trans }}</button>
                    </form>
                {% else %}
                    <form class="mt-3" method="post" action="{{ path('tos_accept', {'termsOfService': termsOfService.id}) }}" onsubmit="return confirm('{{ 'termsOfService.message.accept'|trans }}')">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('tos.accept') }}"/>
                        <button type="submit" class="btn btn-theme-white bg-blue">{{ 'termsOfService.extra.accept'|trans }}</button>
                    </form>
                {% endif %}
            {% endif %}
        </div>
        <div class="ql-editor">{{ termsOfService.content|raw }}</div>
    </div>
{% endblock %}