{% extends 'base.html.twig' %}
{% trans_default_domain 'app' %}

{% block title %}{{ 'page.evaluation.show'|trans }}{% endblock %}

{% block header %}
    <div class="container">
        <div class="row gx-2">
            <div class="col-12 pt-5 pb-3">
                <h1 class="course-header-name">{{ evaluation.name }}</h1>
                <div class="course-header-details">
                    <div class="course-header-details-item">
                        <a href="{{ path('change_locale') }}" class="btn btn-theme-white">{{ 'nav.language'|trans }}<sup class="sup-locale">{{ app.request.locale }}</sup></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row gx-2">
            <div class="col-12 pt-4">
                <div class="container-fluid">
                    <div class="row">
                        {% include '_partials/toasts.html.twig' with {'classAddition': 'p-0'} %}
                    </div>
                    <div class="row">
                        <ul class="course-navigation">
                            {% for nav in navigation %}
                                <li>
                                    {% if nav.path is defined and nav.path is not empty %}
                                        <a href="{{ nav.path }}" class="btn btn-nav w-100{% if nav.active %} active{% endif %}">{{ nav.text }}</a>
                                    {% else %}
                                        <span class="btn btn-nav w-100{% if nav.active %} active{% endif %}">{{ nav.text }}</span>
                                    {% endif %}
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                    <div class="row evaluation-content">
                        {% block evaluationContent %}{% endblock %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}