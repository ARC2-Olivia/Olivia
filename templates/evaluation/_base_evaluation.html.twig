{% extends 'base.html.twig' %}
{% trans_default_domain 'app' %}

{% block title %}{{ 'page.evaluation.show'|trans }}{% endblock %}

{% block header %}
    <div class="container">
        <div class="row gx-2">
            <div class="col-12 pt-5 pb-3">
                <h1 class="course-header-name">{{ evaluation.name }}</h1>
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row gx-2">
            <div class="col-12 py-4">
                <div class="container-fluid">
                    <div class="row">
                        {% include '_partials/toasts.html.twig' with {'classAddition': 'p-0'} %}
                    </div>
                    <div class="row mb-3">{% include '_partials/tab_navigation.html.twig' %}</div>
                    <div class="row evaluation-content">
                        {% block evaluationContent %}{% endblock %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}