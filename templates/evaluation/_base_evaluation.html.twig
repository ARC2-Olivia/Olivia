{% extends 'base.html.twig' %}
{% trans_default_domain 'app' %}

{% block title %}{{ 'page.evaluation.show'|trans }}{% endblock %}

{% block header %}
    <div class="container-fluid bg-dark-blue">
        <div class="container fg-white">
            <div class="row gx-2">
                <div class="col-12 pt-5 pb-3">
                    {% if evaluation.topic is not null %}
                        <div class="course-header-breadcrumbs">
                            <a href="{{ path('topic_index') }}">{{ 'nav.topics'|trans }}</a>
                            {{ mdi('chevron-right') }}
                            <a href="{{ path('topic_show', {'topic': evaluation.topic.id}) }}">{{ evaluation.topic.title }}</a>
                            {{ mdi('chevron-right') }}
                            <span>{{ 'nav.practice'|trans }}</span>
                        </div>
                    {% endif %}
                    <h1 class="course-header-name">{{ evaluation.nameOrPublicName }}</h1>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row gx-2">
            <div class="col-12 py-4">
                <div class="container-fluid">
                    <div class="row">
                        {% include '_partials/toasts.html.twig' with {'classAddition': 'p-0'} %}
                    </div>
                    <div class="row mb-3">{% include '_partials/tab_navigation.html.twig' %}</div>
                    <div class="row evaluation-content mb-4">
                        {% block evaluationContent %}{% endblock %}
                    </div>
                    {% block belowEvaluationContent %}{% endblock %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}