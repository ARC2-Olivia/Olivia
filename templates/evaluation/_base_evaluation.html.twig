{% extends 'base.html.twig' %}
{% trans_default_domain 'app' %}

{% block title %}{{ 'page.evaluation.show'|trans }}{% endblock %}

{% block header %}
    <div class="container">
        <div class="row gx-2">
            <div class="col-12 pt-5 pb-3">
                <h1 class="course-header-name">{{ evaluation.name }}</h1>
                <div class="course-header-details">
                    <div class="course-header-details-item">
                        <a href="{{ path('change_locale') }}" class="btn btn-theme-white">{{ 'nav.language'|trans }}<sup class="sup-locale">{{ app.request.locale }}</sup></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row gx-2">
            <div class="col-12 pt-4">
                <div class="container-fluid">
                    <div class="row">
                        {% include '_partials/toasts.html.twig' with {'classAddition': 'p-0'} %}
                    </div>
                    <div class="row">
                        <ul class="course-navigation">
                            <li><a href="{{ path('evaluation_overview', {'evaluation': evaluation.id}) }}" class="btn btn-nav w-100{% if activeCard == 'overview'%} active{% endif %}">{{ 'evaluation.nav.overview'|trans }}</a></li>
                            <li><a href="{{ path('evaluation_evaluate', {'evaluation': evaluation.id}) }}" class="btn btn-nav w-100{% if activeCard == 'evaluate'%} active{% endif %}">{{ 'evaluation.nav.evaluate'|trans }}</a></li>
                            {% if is_granted('ROLE_MODERATOR') %}
                                <li><a href="{{ path('evaluation_edit', {'evaluation': evaluation.id}) }}" class="btn btn-nav w-100{% if activeCard == 'edit'%} active{% endif %}">{{ 'evaluation.nav.edit.default'|trans }}</a></li>
                                {% if activeCard == 'newQuestion' %}
                                    <li><span class="btn btn-nav w-100 active">{{ 'evaluation.nav.new.question'|trans }}</span></li>
                                {% elseif activeCard == 'editQuestion' %}
                                    <li><span class="btn btn-nav w-100 active">{{ 'evaluation.nav.edit.question'|trans }}</span></li>
                                {% elseif activeCard == 'newAnswer' %}
                                    <li><span class="btn btn-nav w-100 active">{{ 'evaluation.nav.new.answer'|trans }}</span></li>
                                {% endif %}
                            {% endif %}
                        </ul>
                    </div>
                    <div class="row evaluation-content">
                        {% block evaluationContent %}{% endblock %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}