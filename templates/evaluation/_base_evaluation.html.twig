{% extends 'base.html.twig' %}
{% trans_default_domain 'app' %}

{% block title %}{{ 'page.evaluation.show'|trans }}{% endblock %}

{% if sidebarEnabled is not defined %}
    {% set sidebarEnabled = false %}
{% endif %}

{% block header %}
    <div class="container">
        <div class="row gx-2">
            <div class="col-12 pt-5 pb-3">
                <h1 class="course-header-name">{{ evaluation.name }}</h1>
                <div class="course-header-details">
                    <div class="course-header-details-item">
                        <a href="{{ path('change_locale') }}" class="btn btn-theme-white">{{ 'nav.language'|trans }}<sup class="sup-locale">{{ app.request.locale }}</sup></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row gx-2">
            <div class="col-12{% if sidebarEnabled %} col-md-9{% endif%} pt-4">
                <div class="container-fluid">
                    <div class="row">
                        {% include '_partials/toasts.html.twig' with {'classAddition': 'p-0'} %}
                    </div>
                    <div class="row">
                        <ul class="course-navigation">
                            <li><a href="{{ path('evaluation_overview', {'evaluation': evaluation.id}) }}" class="btn btn-nav w-100{% if activeCard == 'overview'%} active{% endif %}">{{ 'evaluation.nav.overview'|trans }}</a></li>
                            <li><a href="#" class="btn btn-nav w-100{% if activeCard == 'edit'%} active{% endif %}">{{ 'evaluation.nav.edit'|trans }}</a></li>
                        </ul>
                    </div>
                    <div class="row course-content">
                        {% block evaluationContent %}{% endblock %}
                    </div>
                </div>
            </div>
            {% if sidebarEnabled %}
                <div class="col-12 col-md-3">
                    {% block evaluationSidebar %}{% endblock %}
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}