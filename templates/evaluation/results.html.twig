{% extends 'evaluation/_base_evaluation.html.twig' %}
{% trans_default_domain 'app' %}

{% block evaluationContent %}
    <div class="evaluation-results">
        {% for result in results %}
            <p>{{ result|nl2br }}</p>
        {% else %}
            <p>{{ 'practicalSubmodule.extra.results.empty'|trans }}</p>
        {% endfor %}
    </div>
    <hr>
    <div class="evaluation-assessment-data">
        {% for assessmentAnswer in evaluationAssessment.practicalSubmoduleAssessmentAnswers %}
            <div class="evaluation-assessment-datum">
                <div class="evaluation-assessment-datum-question">{{ assessmentAnswer.practicalSubmoduleQuestion.questionText }}</div>
                <div class="evaluation-assessment-datum-answer">{{ assessmentAnswer.displayableAnswer|trans|raw|nl2br }}</div>
            </div>
        {% endfor %}
    </div>
    <hr>
    <p class="text-center">{{ 'practicalSubmodule.extra.results.final'|trans }}</p>
{% endblock %}