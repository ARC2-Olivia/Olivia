{% extends 'base.html.twig' %}
{% trans_default_domain 'app' %}

{% block title %}{{ 'page.evaluation.index'|trans }}{% endblock %}

{% block body %}
    <div class="container pt-5">
        <div class="row mb-5">
            <h1 class="text-center">{{ 'practicalSubmodule.title.index'|trans }}</h1>
        </div>
        {% include "_partials/toasts.html.twig" with {'classAddition': 'row'} %}
        <div class="row g-3">
            {% for evaluation in evaluations %}
                {% include 'evaluation/_index_evaluation.html.twig' with {'evaluation': evaluation} %}
            {% endfor %}
            {% if is_granted('ROLE_MODERATOR') %}{% include 'evaluation/_index_add.html.twig' %}{% endif %}
        </div>
    </div>
{% endblock %}