{% extends 'base.html.twig' %}
{% trans_default_domain 'app' %}

{% block title %}{{ 'page.login'|trans }}{% endblock %}

{% block body %}
    <div class="w-100 h-100 row gx-0 justify-content-center align-items-center">
        <div class="card col-xs-11 col-sm-9 col-md-7 col-lg-5 col-xl-3">
            <div class="card-title py-5">
                <h1 class="h1-login text-center">{{ 'app.brand'|trans }}</h1>
            </div>
            <div class="card-body">
                <form>
                    <input type="text" class="form-input mb-3" placeholder="{{ 'common.username'|trans }}">
                    <input type="password" class="form-input mb-3" placeholder="{{ 'common.password'|trans }}">
                    <button type="submit" class="btn btn-theme-white bg-black w-100">{{ 'common.login'|trans }}</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .form-input {
            display: block;
            border-radius: 4px;
            border: solid 1px rgba(0, 0, 0, 0.2);
            font-size: 1rem;
            line-height: 2rem;
            height: 36px;
            padding: 0 8px;
            outline: none;
            width: 100%;
        }

        .form-input:focus {
            border: solid 1px var(--app-color-blue);
        }

        .form-input::placeholder {
            opacity: 0.3;
        }
    </style>
{% endblock %}