{% extends 'base.html.twig' %}
{% trans_default_domain 'app' %}

{% block body %}
    <div class="index-banner" style="background-image: url('{{ asset('build/images/bg-index.png') }}')">
        <div class="index-banner-wrapper">
            <div class="index-banner-title">{{ 'app.brand.short'|trans }}</div>
            <div class="index-banner-subtitle">{{ 'app.subtitle'|trans }}</div>
            <div class="index-banner-actions">
                <a href="#" class="btn btn-theme-white bg-orange">{{ 'nav.training'|trans }}</a>
                <a href="#" class="btn btn-theme-white bg-blue ms-3">{{ 'nav.practice'|trans }}</a>
            </div>
        </div>
    </div>

    <div class="index-about">
        <div class="index-about--left">
            <h2>{{ 'index.about.left.title'|trans }}</h2>
            <p>{{ 'index.about.left.description'|trans }}</p>
        </div>
        <div class="index-about--right">
            <div class="index-about--right--item">
                <div class="index-about--right--item-icon">{{ mdi('lightbulb-variant-outline') }}</div>
                <div class="index-about--right--item-info">
                    <h3>{{ 'index.about.right.1.title'|trans }}</h3>
                    <p>{{ 'index.about.right.1.text'|trans }}</p>
                </div>
            </div>
            <div class="index-about--right--item">
                <div class="index-about--right--item-icon">{{ mdi('lightbulb-variant-outline') }}</div>
                <div class="index-about--right--item-info">
                    <h3>{{ 'index.about.right.1.title'|trans }}</h3>
                    <p>{{ 'index.about.right.1.text'|trans }}</p>
                </div>
            </div>
            <div class="index-about--right--item">
                <div class="index-about--right--item-icon">{{ mdi('lightbulb-variant-outline') }}</div>
                <div class="index-about--right--item-info">
                    <h3>{{ 'index.about.right.1.title'|trans }}</h3>
                    <p>{{ 'index.about.right.1.text'|trans }}</p>
                </div>
            </div>
            <div class="index-about--right--item">
                <div class="index-about--right--item-icon">{{ mdi('lightbulb-variant-outline') }}</div>
                <div class="index-about--right--item-info">
                    <h3>{{ 'index.about.right.1.title'|trans }}</h3>
                    <p>{{ 'index.about.right.1.text'|trans }}</p>
                </div>
            </div>
        </div>
    </div>

    <div class="index-modules mt-5">
        <div class="index-modules--upper">
            <div class="index-modules--upper--img" style="background-image: url('{{ asset('build/images/index-module-theory.png') }}')">
                <div class="index-modules--upper--tape bg-orange">{{ 'index.modules.upper.theoreticalModule'|trans }}</div>
            </div>
            <div class="index-modules--upper--img" style="background-image: url('{{ asset('build/images/index-module-practice.png') }}')">
                <div class="index-modules--upper--tape bg-blue">{{ 'index.modules.upper.practicalModule'|trans }}</div>
            </div>
        </div>
        <div class="index-modules--lower">
            <div class="container">
                <h2>{{ 'index.modules.lower.title'|trans }}</h2>
                <p>{{ 'index.modules.lower.description'|trans }}</p>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    <style>
        .index-modules--upper {
            display: flex;
            justify-content: center;
            column-gap: 8rem;
            margin-bottom: -56px;
        }

        .index-modules--upper .index-modules--upper--img {
            width: 491px;
            height: 331px;
            border-radius: 4px;
            background-position: center center;
            background-size: cover;
            position: relative;
        }

        .index-modules--upper--img .index-modules--upper--tape {
            display: block;
            width: 100%;
            position: absolute;
            bottom: 32px;
            padding-top: 8px;
            padding-bottom: 8px;
            text-align: center;
            color: #ffffff;
            font-size: 1.5rem;
        }

        .index-modules--lower {
            text-align: center;
            padding-top: 72px;
            padding-bottom: 40px;
            background-color: var(--app-color-dark-blue);
            color: #ffffff;
        }

        .index-modules--lower h2 {
            font-size: 1.5rem;
            font-weight: 600;
            margin-top: 0;
            margin-bottom: 16px;
        }

        .index-modules--lower p {
            margin: 0
        }

        @media screen and (max-width: 1199px) {
            .index-modules--upper {
                column-gap: 2rem;
                padding-left: 0.75rem;
                padding-right: 0.75rem;
            }
        }

        @media screen and (max-width: 575px) {
            .index-modules--upper {
                flex-direction: column;
                align-items: center;
                row-gap: 1rem;
            }

            .index-modules--upper .index-modules--upper--img {
                width: 100%;
            }
        }
    </style>
{% endblock %}