{% extends 'base.html.twig' %}
{% trans_default_domain 'app' %}

{% block body %}
    <div class="index-banner" style="background-image: url('{{ asset('build/images/bg-index.png') }}')">
        <div class="index-banner-wrapper">
            <div class="index-banner-title">{{ 'app.brand.short'|trans }}</div>
            <div class="index-banner-subtitle">{{ 'app.subtitle'|trans }}</div>
            <div class="index-banner-actions">
                <a href="{{ path('course_index') }}" class="btn btn-theme-white bg-orange">{{ 'nav.training'|trans }}</a>
                <a href="{{ path('practical_submodule_index') }}" class="btn btn-theme-white bg-blue ms-3">{{ 'nav.practice'|trans }}</a>
            </div>
        </div>
    </div>

    <div class="index-about">
        <div class="index-about--left">
            <h2>{{ 'index.about.left.title'|trans }}</h2>
            <p>{{ 'index.about.left.description'|trans }}</p>
        </div>
        <div class="index-about--right">
            <div class="index-about--right--item">
                <div class="index-about--right--item-icon">{{ mdi('lightbulb-variant-outline') }}</div>
                <div class="index-about--right--item-info">
                    <h3>{{ 'index.about.right.1.title'|trans }}</h3>
                    <p>{{ 'index.about.right.1.text'|trans }}</p>
                </div>
            </div>
            <div class="index-about--right--item">
                <div class="index-about--right--item-icon">{{ mdi('lightbulb-variant-outline') }}</div>
                <div class="index-about--right--item-info">
                    <h3>{{ 'index.about.right.1.title'|trans }}</h3>
                    <p>{{ 'index.about.right.1.text'|trans }}</p>
                </div>
            </div>
            <div class="index-about--right--item">
                <div class="index-about--right--item-icon">{{ mdi('lightbulb-variant-outline') }}</div>
                <div class="index-about--right--item-info">
                    <h3>{{ 'index.about.right.1.title'|trans }}</h3>
                    <p>{{ 'index.about.right.1.text'|trans }}</p>
                </div>
            </div>
            <div class="index-about--right--item">
                <div class="index-about--right--item-icon">{{ mdi('lightbulb-variant-outline') }}</div>
                <div class="index-about--right--item-info">
                    <h3>{{ 'index.about.right.1.title'|trans }}</h3>
                    <p>{{ 'index.about.right.1.text'|trans }}</p>
                </div>
            </div>
        </div>
    </div>

    <div class="index-modules mt-5">
        <div class="index-modules--upper">
            <a class="index-modules--upper--img" style="background-image: url('{{ asset('build/images/index-module-theory.png') }}')" href="{{ path('course_index') }}">
                <div class="index-modules--upper--tape bg-orange">{{ 'index.modules.upper.theoreticalModule'|trans }}</div>
            </a>
            <a class="index-modules--upper--img" style="background-image: url('{{ asset('build/images/index-module-practice.png') }}')" href="{{ path('practical_submodule_index') }}">
                <div class="index-modules--upper--tape bg-blue">{{ 'index.modules.upper.practicalModule'|trans }}</div>
            </a>
        </div>
        <div class="index-modules--lower">
            <div class="container">
                <h2>{{ 'index.modules.lower.title'|trans }}</h2>
                <p>{{ 'index.modules.lower.description'|trans }}</p>
            </div>
        </div>
    </div>

    {% if testimonials is not empty %}
        <div class="container-fluid my-5">
            <div id="carousel" class="index-carousel">
                {% for testimonial in testimonials %}
                    <div class="index-carousel-slide">
                        <div class="index-testimonial container">
                            <h3>{{ testimonial.title }}</h3>
                            <p>{{ testimonial.text }}</p>
                            <div class="index-testimonial-person">
                                <img src="{{ testimonial.image }}" alt="Image of the person giving testimony"/>
                                <div class="d-flex flex-column">
                                    <span>{{ testimonial.personName }}</span>
                                    <span>{{ testimonial.personJob }}</span>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endif %}
{% endblock %}

{% block stylesheets %}
    <style>
        .body { background-color: white; }
    </style>
{% endblock %}

{% block javascripts %}
    {% if testimonials is not empty %}
        {{ encore_entry_script_tags('index.carousel') }}
    {% endif %}
{% endblock %}