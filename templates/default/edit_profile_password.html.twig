{% extends 'base.html.twig' %}
{% trans_default_domain 'app' %}

{% block title %}{{ 'page.profile'|trans }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row gy-2 pt-4">
            <div class="col-12">
                {% include '_partials/toasts.html.twig' with {'classAddition': 'p-0'} %}
            </div>
            <div class="col-12 card card-body profile">
                <h2>{{ 'user.profile.password.edit'|trans }}</h2>
                <hr/>
                {{ form_start(form, {'attr': {'class': 'row g-3'}}) }}
                    <div class="col-12 col-md-6">
                        {{ form_label(form.plainPassword.first) }}
                        {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-input'}}) }}
                    </div>
                    <div class="col-12 col-md-6">
                        {{ form_label(form.plainPassword.second) }}
                        {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-input'}}) }}
                    </div>
                    <div class="col-12 text-end">
                        <a href="{{ path('profile') }}" class="btn btn-link">{{ 'common.cancel'|trans }}</a>
                        <button type="submit" class="btn btn-theme-white bg-green">{{ 'common.save'|trans }}</button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}