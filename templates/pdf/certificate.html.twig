{% trans_default_domain 'app' %}

<!DOCTYPE html>
<html>
    <head>
        <style>
            html, body {
                margin: 0;
                padding: 0;
                font-family: 'Source Sans Pro', sans-serif;
            }
            .top {
                width: 100%;
                height: 168mm;
                background-color: #3a526a;
                position: relative;
                display: -webkit-box;
                -webkit-box-align: center;
                -webkit-box-pack: center;
                justify-items: center;
                align-items: center;
            }
            .top-logo {
                color: rgba(255, 255, 255, 0.2);
                font-size: 36mm;
                position: absolute;
                bottom: -5mm;
                right: 5mm;
                opacity: 10%;
            }
            .bold {
                font-weight: bold;
            }
            .top-content {
                margin: 0 auto;
                text-align: center;
                color: #FFFFFF;
                font-size: 7mm;
            }
            .top-title {
                color: #fe5722;
                font-size: 17mm;
                font-weight: bold;
            }
            .top-data {
                font-weight: bold;
                font-size: 10mm;
            }
            .top-mb {
                margin-bottom: 3mm;
            }
            .top-link {
                position: absolute;
                top: 5mm;
                right: 5mm;
                padding: 1mm 4mm;
                background-color: #fe5722;
                color: #ffffff;
            }
            .bottom {
                width: 100%;
                height: 42mm;
                position: relative;
            }
            .bottom-link {
                position: absolute;
                font-size: 4mm;
                bottom: 5mm;
                left: 5mm;
            }
            .bottom-cert-data {
                position: absolute;
                font-size: 5mm;
                bottom: 5mm;
                right: 5mm;
            }
        </style>
    </head>
    <body>
        <div class="top">
            <div class="top-logo">
                <span class="bold">OLIVIA</span>
                <span>Tool</span>
            </div>
            <div class="top-link">{{ app_hostname }}</div>
            <div class="top-content">
                <div class="top-title top-mb">{{ 'certificate.title'|trans }}</div>
                <div class="top-mb">{{ 'certificate.for'|trans }}</div>
                <div class="top-data top-mb">{{ course.name }}</div>
                <div class="top-mb">{{ 'certificate.to'|trans }}</div>
                <div class="top-data">{{ app.user.nameOrEmail }}</div>
            </div>
        </div>
        <div class="bottom">
            <div class="bottom-link">{{ url('course_overview', {'course': course.id}) }}</div>
            <div class="bottom-cert-data">{{ 'certificate.certifiedAt'|trans }} {{ 'now'|date('d.m.Y.') }}</div>
        </div>
    </body>
</html>