{% trans_default_domain 'app' %}

<!DOCTYPE html>
<html>
    <head>
        <style>
            html, body {
                margin: 0;
                padding: 0;
                font-family: 'Source Sans 3', sans-serif;
            }

            .top {
                width: 100%;
                height: 825px;
                background-color: #3a526a;
                position: relative;
                display: -webkit-box;
                -webkit-box-align: center;
                -webkit-box-pack: center;
                justify-items: center;
                align-items: center;
            }

            .top-logo {
                color: rgba(255, 255, 255, 0.2);
                font-size: 196px;
                position: absolute;
                bottom: -50px;
                right: 15px;
            }

            .bold {
                font-weight: bold;
            }

            .top-content {
                margin: 0 auto;
                text-align: center;
                color: #FFFFFF;
                font-size: 32px;
            }

            .top-title {
                color: #fe5722;
                font-size: 96px;
                font-weight: bold;
            }

            .top-data {
                font-weight: bold;
                font-size: 56px;
            }

            .top-mb {
                margin-bottom: 3mm;
            }

            .top-link {
                position: absolute;
                top: 15px;
                right: 15px;
                padding: 8px 12px;
                background-color: #fe5722;
                color: #ffffff;
                font-size: 20px;
            }

            .bottom {
                width: 100%;
                height: 190px;
                position: relative;
            }

            .bottom-link {
                position: absolute;
                font-size: 18px;
                bottom: 0;
                left: 15px;
            }

            .bottom-cert-data {
                position: absolute;
                font-size: 20px;
                bottom: 0;
                right: 15px;
            }
        </style>
    </head>
    <body>
        <div class="top">
            <div class="top-logo">
                <span class="bold">OLIVIA</span>
                <span>Tool</span>
            </div>
            <div class="top-link">{{ app_hostname }}</div>
            <div class="top-content">
                <div class="top-title top-mb">{{ 'certificate.title'|trans }}</div>
                <div class="top-mb">{{ 'certificate.for'|trans }}</div>
                <div class="top-data top-mb">{{ course.name }}</div>
                <div class="top-mb">{{ 'certificate.to'|trans }}</div>
                <div class="top-data">{{ app.user.nameOrEmail }}</div>
            </div>
        </div>
        <div class="bottom">
            <div class="bottom-link">{{ url('course_overview', {'course': course.id}) }}</div>
            <div class="bottom-cert-data">{{ 'certificate.certifiedAt'|trans }} {{ 'now'|date('d.m.Y.') }}</div>
        </div>
    </body>
</html>